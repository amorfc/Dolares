<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
            <variable
                name="clickListener"
                type="com.example.dolares.ui.capsules.CapsulesAdapter.CapsulesClickListener" />
        <variable
            name="capsule"
            type="com.example.dolares.data.local.model.Capsule" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Constrain1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/starbackground">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{()->clickListener.onClick(capsule)}"
            app:cardCornerRadius="40dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/Constrain1"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{capsule.type}"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="60dp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{capsule.serial}"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="60dp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{capsule.status}"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="60dp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>